{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "noImplicitAny": true,
        "sourceMap": true,
        "outDir": "dst",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "strictNullChecks": true,
        "lib": [
            "dom",
            "es2015",
            "esnext.asynciterable"
        ]
    },
    "exclude": [
        "**/__test__/"
    ],
    "include": [
        "src/**/*"
    ]
}
